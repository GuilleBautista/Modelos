<?xml version="1.0" encoding="UTF-8"?>
<project default="generate" name="ConversationalGameGenerator">
    <property name="ECLIPSE_HOME" value="../../../eclipse/java-2021-09/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="ConversationalGameGenerator.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/ConversationalGameGenerator/bin"/>
    </path>

    <path id="ConversationalGameGenerator.classpath">
        <path refid="ConversationalGameGenerator.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="ConversationalGameGenerator.libraryclasspath.alljars">
        <pathelement location="../ConversationalGameGenerator/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="ConversationalGameGenerator.classpath.alljars">
        <path refid="ConversationalGameGenerator.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="generate">
        <java classname="ConversationalGameGenerator.main.Generate" classpathref="ConversationalGameGenerator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="generate.alljars">
        <java classname="ConversationalGameGenerator.main.Generate" classpathref="ConversationalGameGenerator.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
